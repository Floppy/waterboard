<% content_for :title do %>Weather Summary<% end %>
<div class="gridster">
  <ul>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="time" data-view="Clock" data-title="Time"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="temperature" data-view="Number" data-title="Temperature"></div>
    </li>

    <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="outlook" data-view="Text" data-title="Outlook"></div>
    </li>

    <li data-row="2" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="last_rain" data-view="Number" data-title="Last Rain"></div>
    </li>

    <li data-row="2" data-col="2" data-sizex="2" data-sizey="1">
      <div data-id="next_rain" data-view="Number" data-title="Next Rain"></div>
    </li>

  </ul>
</div>